<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Skyranger (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM)</author>
    <aircraft-version>0.2</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Skyranger/skyranger-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/Skyranger/Sounds/skyranger-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Skyranger/Models/skyranger.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
      <livery-t>
        <file type="string">default</file>
      </livery-t>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="8"> 0 </int>                                            <!--  8 Noze type -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m">  0 </float>                     <!-- 11 altitude for MP shadow -->
        <float n="3" alias="/position/altitude-ft">  0 </float>                    <!-- 11 altitude for MP shadow -->
        <float n="6" alias="/engines/engine[0]/n2" />
        <float n="7" alias="/engines/engine[1]/n2" />
        <float n="8" alias="/controls/engines/engine[0]/throttle" />
        <float n="9" alias="/controls/engines/engine[1]/throttle" />
        <string n="0" type="string" />
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>U.L.M Skyranger</title>
      <line>______________________________________________</line>
    </help>

    <menubar include="Dialogs/skyranger-menu.xml"/>

  </sim>
 
  <input>
    <keyboard include="Nasal/skyranger-keyboard.xml"/>
  </input>

  <!-- DÃ©marrer avec les freins parking -->
  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
  </controls>

  <nasal>
    <doors>
      <file>Aircraft/Skyranger/Nasal/doors.nas</file>
    </doors>
    <skyranger>
      <file>Aircraft/Skyranger/Nasal/liveries.nas</file>
      <file>Aircraft/Skyranger/Nasal/light.nas</file>
    </skyranger>
  </nasal>

</PropertyList>
