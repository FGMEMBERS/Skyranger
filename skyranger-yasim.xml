<?xml version="1.0" encoding="UTF-8"?>

<!-- Skyranger 2008 Emmanuel BARANGER
     Based on FDM of Pierre GEOFFROY

     Wingspan        : 9.5 m
     Length          : 5.6 m
     Height          : 2.0 m
     Empty mass      : 262 kg   (578 lb)
     Cruise speed    : 140 km/h (76 kts)
     Cruise approach :  62 km/h (33 kts)
-->

<airplane mass="552">

  <!-- Approach configuration -->
  <approach speed="33" aoa="8.05" fuel="0.2">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
  </approach>

  <!-- Cruise configuration -->
  <cruise speed="76" alt="6000" fuel="0.5">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.75"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="0.0"/>
  </cruise>

  <cockpit x="0.719" y="0.326" z="0.310"/>

  <fuselage ax="2.747" ay="0" az="-0.037" bx="-2.749" by="0" bz="0.240" width="1.244" taper="0.2" midpoint="1"/>

  <wing x="0.675" y="0.585" z="0.618" 
        chord="1.477" 
        length="4.159" 
        taper="1" 
        camber="0.11410">
        <stall aoa="16" width="1.0" peak="1.5"/>
        <flap0 start="0" end="0.557" lift="1.4" drag="1.5"/>
        <flap1 start="0.558" end="0.95" lift="1.2" drag="1.1"/>

        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>

        <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>

        <control-speed control="FLAP0" transition-time="5"/>
  </wing>

  <hstab x="-2.171" y="-0.065" z="0.361" 
         chord="1.169" 
         length="1.437" 
         taper="0.5">
         <stall aoa="16" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="2.0" drag="1.1" effectiveness="2"/>

        <control-input axis="/controls/flight/elevator" control="FLAP0"/>
        <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

        <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-2.171" y="0" z="0.394" 
         chord="1.170" 
         length="1.101" 
         taper="0.506" 
         sweep="39.8" >
         <stall aoa="14" width="3" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.5" drag="1.2"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <!-- engine:    ROTAX 912 UL
       propeller: JUNKERS AVY-3 STD
  =================================================================================
  TO-/MC- engine power(kW): 59,6/58
                      RPM : 5800/5500
  propeller max RPM: 2552
  diameter: 1,76 m
  MTOM: 620 kg
  noise (dB): 66,0 (ICAO chapter 10, annex 16), 76,4 (ICAO chapter 10, annex 10.4a)
  ref: http://www.rotax-aircraft-engines.com/a_engine_912.htm  -->
  <propeller x="2.162" y="0.0" z="-0.137" 
             mass="183" 
             moment="4.40"  
             radius="0.88"
             cruise-speed="76" 
             cruise-rpm="2112"
             cruise-alt="6000" 
             cruise-power="58"
             takeoff-power="81" 
             takeoff-rpm="2552"
             gear-ratio="0.440" >
             <piston-engine eng-rpm="5800" 
                            eng-power="81"
                            displacement="73.91" 
                            compression="9.0"/>
             <actionpt x="2.636" y="0.0" z="-0.037" />
             <control-input control="THROTTLE" axis="/controls/engines/engine[0]/throttle" />
             <control-input control="STARTER" axis="/controls/engines/engine[0]/starter" />
             <control-input control="MAGNETOS" axis="/controls/engines/engine[0]/magnetos" />
             <control-input control="MIXTURE" axis="/controls/engines/engine[0]/mixture" />
  </propeller>
  
 <!-- Nose wheel -->
  <gear x="2.137" y="0" z="-1.133" 
        compression="0.2" 
        spring="1.3" 
        dfric="0.75"
        sfric ="0.4">
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1.0" src1="1.0" dst0="-0.5" dst1="0.5"/>
  </gear>

  <!-- Left wheel -->
  <gear x="0.601" y="1.015" z="-1.126" 
        compression="0.2" 
        spring="1.3" 
        dfric="0.75"
        sfric ="0.4">
        <control-input axis="/controls/gear/brake-left" control="BRAKE" split="true"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  </gear>

  <!-- Right wheel -->
  <gear x="0.601" y="-1.015" z="-1.126" 
        compression="0.2" 
        spring="1.3" 
        dfric="0.75"
        sfric ="0.4">
        <control-input axis="/controls/gear/brake-right" control="BRAKE" split="true"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  </gear>

  <tank x="0.456" y="0" z="-0.310" capacity="79.25" />

  <!-- Mass distribution -->
  <!-- Centre de la corde x=0.675 y=0 z=0.618 -->
  <!-- Mise légèrement en avant du CG w=1.060 y=0 z=0.550 -->
  <ballast x="0.70" y="0.0" z="0.951" mass="350"/>

</airplane>

