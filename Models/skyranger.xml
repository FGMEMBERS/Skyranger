<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>skyranger.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Skyranger/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>structure</object-name>
    <object-name>aileronGint</object-name>
    <object-name>aileronDint</object-name>
    <object-name>voletint</object-name>
    <object-name>profondeurint</object-name>
    <object-name>moteur</object-name>
    <object-name>moteur1</object-name>
    <object-name>moteur2</object-name>
    <object-name>moteur3</object-name>
    <object-name>moteur4</object-name>
    <object-name>moteur5</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>

    <!-- Objets transparents -->
    <object-name>fuselageT</object-name>
    <object-name>ailes</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>volet</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>

    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>structure</object-name>
    <object-name>aileronGint</object-name>
    <object-name>aileronDint</object-name>
    <object-name>voletint</object-name>
    <object-name>profondeurint</object-name>
    <object-name>moteur</object-name>
    <object-name>moteur1</object-name>
    <object-name>moteur2</object-name>
    <object-name>moteur3</object-name>
    <object-name>moteur4</object-name>
    <object-name>moteur5</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselageT</object-name>
    <object-name>ailes</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>volet</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>

    <property-base>sim/model/livery-t</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture-t.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/Skyranger/Models/shadow.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>shadowOSG</object-name>
    <condition>
      <equals>
        <property>sim[0]/rendering/shadows-ai</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Skyranger/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.636 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.037 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <name>GouverneProf</name>
    <object-name>profondeur</object-name>
    <object-name>profondeurint</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>GouverneProf</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 11 </factor>
    <center>
      <x-m> 2.293 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.363 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <axis>
      <x1-m>  2.252 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m>  0.070 </z1-m>
      <x2-m>  2.388 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.103 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <object-name>aileronGint</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -0.172 </x-m>
      <y-m> -3.630 </y-m>
      <z-m>  0.526 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation> 

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <object-name>aileronDint</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -0.172 </x-m>
      <y-m>  3.630 </y-m>
      <z-m>  0.526 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>volet</object-name>
    <object-name>voletint</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -0.172 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.516 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <name>TrainAvant</name>
    <object-name>roueA</object-name>
    <object-name>axeA</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>TrainAvant</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.15 </dep></entry>
    </interpolation>
    <axis>
      <x> 0.364151 </x>
      <y> 0.000000 </y>
      <z> 0.838078 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainGauche</name>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -4 </dep></entry>
      <entry><ind> 0.6 </ind><dep>  1 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  6 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.586 </x-m>
      <y-m> -0.602 </y-m>
      <z-m> -0.470 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainDroit</name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainDroit</object-name>
    <property>gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -4 </dep></entry>
      <entry><ind> 0.6 </ind><dep>  1 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  6 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.586 </x-m>
      <y-m>  0.602 </y-m>
      <z-m> -0.470 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>TrainAvant</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -20 </factor>
    <center>
      <x-m> -1.887585 </x-m>
      <y-m>  0.000000 </y-m>
      <z-m> -0.407991 </z-m>
    </center>
    <axis>
      <x> 0.364151 </x>
      <y> 0.000000 </y>
      <z> 0.838078 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.137 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.988 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.601 </x-m>
      <y-m> -1.015 </y-m>
      <z-m> -0.981 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.601 </x-m>
      <y-m>  1.015 </y-m>
      <z-m> -0.9817 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

