<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>siege</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Skyranger/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.951 </x-m>
      <y-m> -0.325 </y-m>
      <z-m> -0.167 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Skyranger/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.269 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.071 </z-m>
      <pitch-deg>  -4 </pitch-deg>
    </offsets>
  </model>

</PropertyList>
